<h1><%=h @post.title %></h1>
<%=simple_format @post.body %>

<h2>Add Comment</h2>
<% form_for(@comment) do |f| %>
	<%= render :partial => 'comment_form', :locals => {:form => f} %>
<% end %>

<div id="comments">
	<%= number_of_comments(@post.comments) %>
	<%= render :partial => 'comment', :collection => @post.comments %>
</div>

<p>
    <%= link_to('Edit Post', edit_post_path(@post)) if signed_in? %>
    <%= link_to 'Back', posts_path %>
</p>