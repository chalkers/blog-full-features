<h1>My Blog</h1>
<% @posts.each do |post| %>
    <h1><%= link_to post.title, post %></h1>
    <%= simple_format post.body %>
    <% if signed_in? %>
        <p class="admin">
          <%= link_to 'Edit Post', edit_post_path(post) %>
          <%= link_to 'Delete Post', post, :confirm => 'Are you sure?', :method => :delete %>
        </p>
    <% end %>
<% end %>

<p>
  <%= will_paginate @posts %>
</p>

<p>
  <% if signed_in? %>
      <%= link_to 'New Post', new_post_path %>
  <% end %>
</p>